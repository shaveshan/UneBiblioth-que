<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    tools:context=".DetailsActivity">


    <LinearLayout
        android:id="@+id/titreDis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#fafafafa"
        android:orientation="horizontal">

        <com.shaveshan.fontawsomeaddtomyapp.MyTextViewFontAwesome
            android:id="@+id/iconDis"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#fafafa"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/book"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/titreD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:elegantTextHeight="false"
            android:fontFamily="casual"
            android:freezesText="false"
            android:gravity="center_vertical"
            android:inputType="none"
            android:paddingLeft="8dp"
            android:text="Titre"
            android:textColor="#AAA"
            android:textDirection="ltr"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15dp">


        <TableLayout
            android:id="@+id/tableDis_Mod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="40dp">

            <TableRow
                android:id="@+id/auteurDis_Mod"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/thisAuteurDis_Mod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:fontFamily="casual"
                        android:gravity="center_vertical"
                        android:text="Author"
                        android:textColor="#949494"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:ems="10"
                        android:inputType="none|textPersonName" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:fontFamily="casual"
                        android:gravity="center_vertical"
                        android:text="Keyword"
                        android:textColor="#949494"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editKey"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="none|textPersonName" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="casual"
                        android:gravity="center_vertical"
                        android:text="Abstract :"
                        android:textColor="#949494"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editAbs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:lines="10" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:background="#fafafa"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shaveshan.fontawsomeaddtomyapp.MyTextViewFontAwesome
            android:id="@+id/editBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#DDD"
            android:gravity="center"
            android:onClick="editBtn"
            android:selectAllOnFocus="false"
            android:text="@string/editBook"
            android:textIsSelectable="false"
            android:textSize="30sp" />

        <com.shaveshan.fontawsomeaddtomyapp.MyTextViewFontAwesome
            android:id="@+id/deletBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DDD"
            android:gravity="center"
            android:onClick="delete"
            android:text="@string/deleteBook"
            android:textSize="30sp" />

        <com.shaveshan.fontawsomeaddtomyapp.MyTextViewFontAwesome
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="#DDD"
            android:gravity="center"
            android:text="@string/backBtn"
            android:textIsSelectable="false"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>